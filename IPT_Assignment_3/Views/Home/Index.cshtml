@model IEnumerable<IPT_Assignment_3.Models.PS4>

<html>
<head>
</head>
<body style="background-color:blue;color:white;">

    <div class="container-fluid">
        <nav class="navbar navbar-inverse">
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("PlayStation","Index", "Home")</li>
                <li>@Html.ActionLink("Xbox","Index", "Xbox")</li>
                <li>@Html.ActionLink("PC", "Index", "PC")</li>
            </ul>
        </nav>
    </div>
    <div class="container text-center">
        <h1>PLAYSTAION EXCLUSIVES</h1>
        <img src="~/images/3a95877d0da6b84009c45929b7409660.jpg" width="150" height="130" class="img-circle"/>
    </div>
   
        <h2>PS Exclusives List</h2>

        <p>
          @Html.ActionLink("Add New Game", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.game_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.year)
                </th>
               
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.game_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.year)
                    </td>
                  
                </tr>
            }

        </table>
   
</body>
</html>